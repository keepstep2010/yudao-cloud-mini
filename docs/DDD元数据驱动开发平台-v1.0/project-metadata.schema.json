{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/1.0/project-metadata.schema.json",
  "title": "项目元数据 - 迁移指南",
  "description": "此文件已被弃用，请使用新的分层架构模式。新模式提供更好的性能、可维护性和模块化设计。",
  "version": "1.0.0-deprecated",
  "deprecated": true,
  "type": "object",
  "properties": {
    "migrationGuide": {
      "type": "object",
      "properties": {
        "newSchemaLocation": {
          "type": "string",
          "const": "object-jsonschemas/project-metadata.schemas/",
          "description": "新的模式文件位置"
        },
        "benefits": {
          "type": "array",
          "items": { "type": "string" },
          "default": [
            "95%+ 减少 PATCH 操作的数据传输量",
            "模块化的字段定义，便于重用和维护",
            "专门的补丁模式支持高效增量更新",
            "更好的性能和缓存友好性",
            "清晰的关注点分离",
            "支持复杂项目管理的分层设计",
            "增强的团队管理和技术栈跟踪",
            "完善的业务上下文和风险管理"
          ]
        },
        "migrationSteps": {
          "type": "object",
          "properties": {
            "step1": {
              "type": "string",
              "default": "使用 object-jsonschemas/project-metadata.schemas/fields/ 下的字段定义替换直接字段定义"
            },
            "step2": {
              "type": "string", 
              "default": "将完整项目元数据迁移到 object-jsonschemas/project-metadata.schemas/full/project-metadata.schema.json"
            },
            "step3": {
              "type": "string",
              "default": "使用 object-jsonschemas/project-metadata.schemas/operations/patch/ 下的补丁模式进行增量更新"
            },
            "step4": {
              "type": "string",
              "default": "利用 object-jsonschemas/project-metadata.schemas/operations/bulk/ 进行批量操作"
            }
          }
        },
        "newSchemaFiles": {
          "type": "object",
          "properties": {
            "fieldDefinitions": {
              "type": "array",
              "items": { "type": "string" },
              "default": [
                "fields/common-fields.schema.json - 通用字段定义",
                "fields/project-fields.schema.json - 项目基础字段",
                "fields/team-fields.schema.json - 团队和人员字段",
                "fields/technical-fields.schema.json - 技术栈字段",
                "fields/business-fields.schema.json - 业务相关字段"
              ]
            },
            "fullSchemas": {
              "type": "array", 
              "items": { "type": "string" },
              "default": [
                "full/project-metadata.schema.json - 完整项目元数据定义"
              ]
            },
            "operations": {
              "type": "array",
              "items": { "type": "string" },
              "default": [
                "operations/patch/project-metadata-patch.schema.json - 项目增量更新",
                "operations/bulk/project-metadata-bulk-operations.schema.json - 批量操作"
              ]
            }
          }
        },
        "usageExamples": {
          "type": "object",
          "properties": {
            "fullProjectDefinition": {
              "type": "string",
              "default": "使用 full/project-metadata.schema.json 定义完整的项目信息，包含团队、技术栈、业务上下文等"
            },
            "incrementalUpdate": {
              "type": "string", 
              "default": "使用 operations/patch/project-metadata-patch.schema.json 进行部分更新，只传输变更的字段"
            },
            "teamManagement": {
              "type": "string",
              "default": "使用 fields/team-fields.schema.json 管理团队成员、角色、技能等信息"
            },
            "techStackTracking": {
              "type": "string",
              "default": "使用 fields/technical-fields.schema.json 跟踪技术栈选择和变更"
            },
            "businessContext": {
              "type": "string",
              "default": "使用 fields/business-fields.schema.json 管理业务目标、需求、风险等"
            },
            "batchOperations": {
              "type": "string",
              "default": "使用 operations/bulk/ 模式一次性处理多个项目的创建、更新或归档"
            }
          }
        },
        "keyImprovements": {
          "type": "object",
          "properties": {
            "teamManagement": {
              "type": "string",
              "default": "增强的团队管理功能，支持技能跟踪、可用性管理、沟通渠道配置"
            },
            "techStackEvolution": {
              "type": "string",
              "default": "全面的技术栈定义，涵盖前端、后端、基础设施、测试、工具等各个方面"
            },
            "businessAlignment": {
              "type": "string",
              "default": "完善的业务上下文支持，包括目标管理、需求跟踪、风险评估、合规管理"
            },
            "dddIntegration": {
              "type": "string",
              "default": "专门的DDD上下文信息，支持领域模型复杂度评估和架构模式选择"
            },
            "advancedOperations": {
              "type": "string",
              "default": "高级批量操作支持，包括事务处理、并行执行、通知、审计等企业级功能"
            }
          }
        }
      },
      "required": ["newSchemaLocation", "benefits", "migrationSteps"]
    }
  },
  "required": ["migrationGuide"],
  "additionalProperties": false
}
