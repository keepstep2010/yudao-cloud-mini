              "type": "string",
              "default": "使用 ./object-jsonschemas/implementation-mapping.schemas/full/architecture-mapping.schema.json"
            },
            "persistenceMapping": {
              "type": "string",
              "default": "使用 ./object-jsonschemas/implementation-mapping.schemas/full/persistence-mapping.schema.json"
            },
            "integrationMapping": {
              "type": "string",
              "default": "使用 ./object-jsonschemas/implementation-mapping.schemas/full/integration-mapping.schema.json"
            }
          }
        }
      },
      "required": ["notice", "newSchemaLocation", "benefits", "migrationGuide"]
    }
  },
  "required": ["migration"],
  "additionalProperties": false
