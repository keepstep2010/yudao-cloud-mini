            "bulkOperations": {
              "type": "string",
              "default": "使用 ./object-jsonschemas/implementation-mapping.schemas/operations/bulk/implementation-mapping-bulk-operations.schema.json"
            },
            "fieldDefinitions": {
              "type": "string",
              "default": "参考 ./object-jsonschemas/implementation-mapping.schemas/fields/ 目录下的字段定义"
