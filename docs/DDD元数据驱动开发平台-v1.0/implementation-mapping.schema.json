        "migrationGuide": {
          "type": "object",
          "properties": {
            "fullSchema": {
              "type": "string",
              "default": "使用 ./object-jsonschemas/implementation-mapping.schemas/full/implementation-mapping.schema.json"
            },
            "patchOperations": {
              "type": "string", 
              "default": "使用 ./object-jsonschemas/implementation-mapping.schemas/operations/patch/implementation-mapping-patch.schema.json"
