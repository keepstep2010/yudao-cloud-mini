{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/2.0/ubiquitous-language/operations/update/business-attribute-update.schema.json",
  "title": "业务属性更新操作",
  "description": "完整更新业务属性的操作模式 - 支持属性定义和约束更新",
  "version": "2.0.0",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "要更新的业务属性ID"
    },
    "attribute": {
      "$ref": "../../full/business-attribute.schema.json",
      "description": "新的业务属性完整定义"
    },
    "options": {
      "type": "object",
      "properties": {
        "validateDependencies": {
          "type": "boolean",
          "default": true,
          "description": "是否验证依赖关系"
        },
        "updateReferences": {
          "type": "boolean",
          "default": false,
          "description": "是否更新引用此属性的地方"
        },
        "preserveConstraints": {
          "type": "boolean",
          "default": true,
          "description": "是否保留现有约束"
        }
      },
      "description": "更新选项"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "updatedBy": {
          "type": "string",
          "maxLength": 50,
          "description": "更新者"
        },
        "updateReason": {
          "type": "string",
          "maxLength": 500,
          "description": "更新原因"
        },
        "constraintChanges": {
          "type": "array",
          "items": {"type": "string"},
          "description": "约束变更列表"
        }
      },
      "description": "更新元数据"
    }
  },
  "required": ["id", "attribute"],
  "additionalProperties": false
}
