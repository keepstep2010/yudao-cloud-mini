{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/2.0/ubiquitous-language/operations/create/business-attribute-create.schema.json",
  "title": "业务属性创建操作",
  "description": "创建新业务属性的操作模式 - 支持属性定义和约束验证",
  "version": "2.0.0",
  "type": "object",
  "properties": {
    "attribute": {
      "$ref": "../../full/business-attribute.schema.json",
      "description": "要创建的业务属性完整定义"
    },
    "options": {
      "type": "object",
      "properties": {
        "validateDependencies": {
          "type": "boolean",
          "default": true,
          "description": "是否验证依赖关系"
        },
        "autoResolveType": {
          "type": "boolean",
          "default": true,
          "description": "是否自动解析类型"
        },
        "checkNaming": {
          "type": "boolean",
          "default": true,
          "description": "是否检查命名规范"
        },
        "validateConstraints": {
          "type": "boolean",
          "default": true,
          "description": "是否验证约束"
        }
      },
      "description": "创建选项"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "createdBy": {
          "type": "string",
          "maxLength": 50,
          "description": "创建者"
        },
        "source": {
          "type": "string",
          "maxLength": 100,
          "description": "来源"
        },
        "reason": {
          "type": "string",
          "maxLength": 500,
          "description": "创建原因"
        }
      },
      "description": "创建元数据"
    }
  },
  "required": ["attribute"],
  "additionalProperties": false
}
