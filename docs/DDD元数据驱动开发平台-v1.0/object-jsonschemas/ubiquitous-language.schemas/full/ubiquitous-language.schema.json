    },
    "TermRelationshipReference": {
      "type": "object",
      "description": "术语关系引用",
      "properties": {
        "relationshipId": {
          "type": "string",
          "description": "关系标识"
        },
        "relatedTermId": {
          "type": "string",
          "description": "关联术语标识"
        },
        "relationshipType": {
          "$ref": "#/$defs/RelationshipType",
          "description": "关系类型"
        },
        "direction": {
          "type": "string",
          "enum": ["incoming", "outgoing", "bidirectional"],
          "description": "关系方向"
        }
      },
      "required": ["relationshipId", "relatedTermId", "relationshipType"],
      "additionalProperties": false
    },
    "SemanticVersion": {
      "type": "object",
      "description": "语义版本",
      "properties": {
        "major": {
          "type": "integer",
          "minimum": 0,
          "description": "主版本号"
        },
        "minor": {
          "type": "integer",
          "minimum": 0,
          "description": "次版本号"
        },
        "patch": {
          "type": "integer",
          "minimum": 0,
          "description": "补丁版本号"
        },
        "prerelease": {
          "type": "string",
          "description": "预发布标识"
        },
        "build": {
          "type": "string",
          "description": "构建标识"
        }
      },
      "required": ["major", "minor", "patch"],
      "additionalProperties": false
    },
    "CompatibilityInfo": {
      "type": "object",
      "description": "兼容性信息",
      "properties": {
        "backwardCompatible": {
          "type": "boolean",
          "description": "向后兼容"
        },
        "forwardCompatible": {
          "type": "boolean",
          "description": "向前兼容"
        },
        "breakingChanges": {
          "type": "array",
          "items": { "type": "string" },
          "description": "破坏性变更"
        },
        "migrationPath": {
          "type": "string",
          "description": "迁移路径"
        }
      },
      "required": ["backwardCompatible"],
      "additionalProperties": false
    }
  }
}
