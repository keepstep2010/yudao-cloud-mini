{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/ddd-metamodel/3.0/schemas/ubiquitous-language/ubiquitous-language.schema.json",
  "title": "统一语言域聚合根",
  "description": "统一语言域聚合根定义 - 5域架构集成版 v3.0",
  "version": "3.0.0",
  "type": "object",
  "properties": {
    "metadata": {
      "$ref": "../../root.schema.json#/$defs/SchemaMetadata",
      "description": "Schema元数据信息"
    },
    "identity": {
      "$ref": "#/$defs/UbiquitousLanguageIdentity",
      "description": "统一语言标识信息"
    },
    "terminology": {
      "$ref": "#/$defs/TerminologySystem",
      "description": "术语体系定义"
    },
    "semantics": {
      "$ref": "#/$defs/SemanticDefinitions",
      "description": "语义定义体系"
    },
    "crossDomainMappings": {
      "$ref": "#/$defs/CrossDomainMappings",
      "description": "跨域映射关系"
    },
    "evolution": {
      "$ref": "#/$defs/LanguageEvolution",
      "description": "语言演进历史"
    },
    "governance": {
      "$ref": "#/$defs/LanguageGovernance",
      "description": "语言治理机制"
    },
    "qualityMetrics": {
      "$ref": "#/$defs/LanguageQualityMetrics",
      "description": "语言质量度量"
    },
    "integration": {
      "$ref": "#/$defs/IntegrationConfiguration",
      "description": "集成配置信息"
    }
  },
  "required": ["metadata", "identity", "terminology"],
  "additionalProperties": false,
  "$defs": {
    "UbiquitousLanguageIdentity": {
      "type": "object",
      "description": "统一语言标识信息",
      "properties": {
        "languageId": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "统一语言唯一标识"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "统一语言名称"
        },
        "namespace": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9.-]*[a-z0-9]$",
          "description": "命名空间"
        },
        "domainContext": {
          "type": "string",
          "description": "领域上下文标识"
        },
        "boundedContextId": {
          "type": "string",
          "description": "限界上下文标识"
        },
        "version": {
          "$ref": "#/$defs/SemanticVersion",
          "description": "语言版本信息"
        },
        "scope": {
          "type": "string",
          "enum": ["global", "domain", "bounded-context", "module"],
          "description": "语言范围"
        },
        "maturityLevel": {
          "type": "string",
          "enum": ["draft", "candidate", "stable", "deprecated"],
          "description": "成熟度级别"
        }
      },
      "required": ["languageId", "name", "namespace", "version"],
      "additionalProperties": false
    },
    "TerminologySystem": {
      "type": "object",
      "description": "术语体系定义",
      "properties": {
        "coreConcepts": {
          "type": "array",
          "items": { "$ref": "#/$defs/BusinessTerm" },
          "description": "核心概念术语"
        },
        "domainSpecificTerms": {
          "type": "array", 
          "items": { "$ref": "#/$defs/BusinessTerm" },
          "description": "领域特定术语"
        },
        "technicalTerms": {
          "type": "array",
          "items": { "$ref": "#/$defs/TechnicalTerm" },
          "description": "技术术语"
        },
        "businessProcessTerms": {
          "type": "array",
          "items": { "$ref": "#/$defs/ProcessTerm" },
          "description": "业务流程术语"
        },
        "termCategories": {
          "type": "array",
          "items": { "$ref": "#/$defs/TermCategory" },
          "description": "术语分类体系"
        },
        "termRelationships": {
          "type": "array",
          "items": { "$ref": "#/$defs/TermRelationship" },
          "description": "术语关系定义"
        },
        "terminologyGlossary": {
          "$ref": "#/$defs/TerminologyGlossary",
          "description": "术语词汇表"
        },
        "translationMappings": {
          "type": "array",
          "items": { "$ref": "#/$defs/LanguageTranslation" },
          "description": "多语言翻译映射"
        }
      },
      "required": ["coreConcepts"],
      "additionalProperties": false
    },
    "BusinessTerm": {
      "type": "object",
      "description": "业务术语定义",
      "properties": {
        "termId": {
          "type": "string",
          "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "术语唯一标识"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 100,
          "description": "术语名称"
        },
        "englishName": {
          "type": "string",
          "pattern": "^[A-Za-z][A-Za-z0-9 ]*$",
          "description": "英文名称"
        },
        "programmingName": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$",
          "description": "编程名称"
        },
        "definition": {
          "type": "string",
          "minLength": 10,
          "description": "术语定义"
        },
        "context": {
          "type": "string",
          "description": "使用上下文"
        },
        "category": {
          "$ref": "#/$defs/TermCategoryType",
          "description": "术语分类"
        },
        "importance": {
          "type": "string",
          "enum": ["critical", "important", "normal", "optional"],
          "description": "重要程度"
        },
        "usage": {
          "$ref": "#/$defs/TermUsage",
          "description": "使用情况"
        },
        "semantics": {
          "$ref": "#/$defs/TermSemantics",
          "description": "语义信息"
        },
        "relationships": {
          "type": "array",
          "items": { "$ref": "#/$defs/TermRelationshipReference" },
          "description": "术语关系引用"
        },
        "domainMappings": {
          "$ref": "#/$defs/TermDomainMappings",
          "description": "跨域映射"
        },
        "examples": {
          "type": "array",
          "items": { "$ref": "#/$defs/TermExample" },
          "description": "使用示例"
        },
        "businessRules": {
          "type": "array",
          "items": { "type": "string" },
          "description": "关联业务规则ID"
        },
        "qualityIndicators": {
          "$ref": "#/$defs/TermQualityIndicators",
          "description": "质量指标"
        },
        "lifecycle": {
          "$ref": "#/$defs/TermLifecycle",
          "description": "生命周期信息"
        }
      },
      "required": ["termId", "name", "definition", "category"],
      "additionalProperties": false
    },
    "TechnicalTerm": {
      "type": "object",
      "description": "技术术语定义",
      "properties": {
        "termId": {
          "type": "string",
          "pattern": "^tech-[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "技术术语标识"
        },
        "name": {
          "type": "string",
          "description": "技术术语名称"
        },
        "technicalDefinition": {
          "type": "string",
          "description": "技术定义"
        },
        "implementationDetails": {
          "type": "object",
          "description": "实现细节"
        },
        "relatedBusinessTerms": {
          "type": "array",
          "items": { "type": "string" },
          "description": "关联业务术语"
        }
      },
      "required": ["termId", "name", "technicalDefinition"],
      "additionalProperties": false
    },
    "ProcessTerm": {
      "type": "object",
      "description": "流程术语定义",
      "properties": {
        "termId": {
          "type": "string",
          "pattern": "^process-[a-z][a-z0-9-]*[a-z0-9]$",
          "description": "流程术语标识"
        },
        "name": {
          "type": "string",
          "description": "流程术语名称"
        },
        "processDefinition": {
          "type": "string",
          "description": "流程定义"
        },
        "steps": {
          "type": "array",
          "items": { "type": "string" },
          "description": "流程步骤"
        },
        "participants": {
          "type": "array",
          "items": { "type": "string" },
          "description": "参与者"
        }
      },
      "required": ["termId", "name", "processDefinition"],
      "additionalProperties": false
    },
    "TermCategory": {
      "type": "object",
      "description": "术语分类定义",
      "properties": {
        "categoryId": {
          "type": "string",
          "description": "分类标识"
        },
        "name": {
          "type": "string",
          "description": "分类名称"
        },
        "description": {
          "type": "string",
          "description": "分类描述"
        },
        "parentCategoryId": {
          "type": "string",
          "description": "父分类标识"
        },
        "level": {
          "type": "integer",
          "minimum": 0,
          "description": "分类层级"
        }
      },
      "required": ["categoryId", "name"],
      "additionalProperties": false
    },
    "TermCategoryType": {
      "type": "string",
      "enum": [
        "entity",
        "value-object", 
        "aggregate",
        "domain-service",
        "business-process",
        "business-rule",
        "event",
        "command",
        "query",
        "policy",
        "specification"
      ],
      "description": "术语分类类型"
    },
    "TermRelationship": {
      "type": "object",
      "description": "术语关系定义",
      "properties": {
        "relationshipId": {
          "type": "string",
          "description": "关系标识"
        },
        "sourceTermId": {
          "type": "string",
          "description": "源术语标识"
        },
        "targetTermId": {
          "type": "string",
          "description": "目标术语标识"
        },
        "relationshipType": {
          "$ref": "#/$defs/RelationshipType",
          "description": "关系类型"
        },
        "strength": {
          "type": "string",
          "enum": ["weak", "moderate", "strong"],
          "description": "关系强度"
        },
        "direction": {
          "type": "string", 
          "enum": ["unidirectional", "bidirectional"],
          "description": "关系方向"
        },
        "description": {
          "type": "string",
          "description": "关系描述"
        },
        "constraints": {
          "type": "array",
          "items": { "type": "string" },
          "description": "关系约束"
        }
      },
      "required": ["relationshipId", "sourceTermId", "targetTermId", "relationshipType"],
      "additionalProperties": false
    },
    "RelationshipType": {
      "type": "string",
      "enum": [
        "synonym",
        "antonym", 
        "hypernym",
        "hyponym",
        "meronym",
        "holonym",
        "association",
        "composition",
        "aggregation",
        "inheritance",
        "dependency",
        "causation",
        "sequence",
        "alternative"
      ],
      "description": "术语关系类型"
    },
    "TermUsage": {
      "type": "object",
      "description": "术语使用情况",
      "properties": {
        "frequency": {
          "type": "string",
          "enum": ["very-high", "high", "medium", "low", "very-low"],
          "description": "使用频率"
        },
        "contexts": {
          "type": "array",
          "items": { "type": "string" },
          "description": "使用上下文列表"
        },
        "userRoles": {
          "type": "array",
          "items": { "type": "string" },
          "description": "使用用户角色"
        },
        "communicationChannels": {
          "type": "array",
          "items": { "type": "string" },
          "description": "沟通渠道"
        }
      },
      "additionalProperties": false
    },
    "TermSemantics": {
      "type": "object",
      "description": "术语语义信息",
      "properties": {
        "conceptType": {
          "type": "string",
          "enum": ["concrete", "abstract", "collective", "relational"],
          "description": "概念类型"
        },
        "semanticDomain": {
          "type": "string",
          "description": "语义领域"
        },
        "ontologyMapping": {
          "type": "object",
          "description": "本体映射"
        },
        "synonyms": {
          "type": "array",
          "items": { "type": "string" },
          "description": "同义词"
        },
        "antonyms": {
          "type": "array",
          "items": { "type": "string" },
          "description": "反义词"
        },
        "relatedConcepts": {
          "type": "array",
          "items": { "type": "string" },
          "description": "相关概念"
        }
      },
      "additionalProperties": false
    },
    "TermDomainMappings": {
      "type": "object",
      "description": "术语跨域映射",
      "properties": {
        "problemDomainMapping": {
          "$ref": "#/$defs/ProblemDomainMapping",
          "description": "问题域映射"
        },
        "solutionDomainMapping": {
          "$ref": "#/$defs/SolutionDomainMapping", 
          "description": "解决方案域映射"
        },
        "communicationDomainMapping": {
          "$ref": "#/$defs/CommunicationDomainMapping",
          "description": "通信域映射"
        },
        "infrastructureDomainMapping": {
          "$ref": "#/$defs/InfrastructureDomainMapping",
          "description": "基础设施域映射"
        }
      },
      "additionalProperties": false
    },
    "ProblemDomainMapping": {
      "type": "object",
      "description": "问题域映射",
      "properties": {
        "aggregateRoots": {
          "type": "array",
          "items": { "type": "string" },
          "description": "聚合根映射"
        },
        "entities": {
          "type": "array",
          "items": { "type": "string" },
          "description": "实体映射"
        },
        "valueObjects": {
          "type": "array",
          "items": { "type": "string" },
          "description": "值对象映射"
        },
        "domainEvents": {
          "type": "array",
          "items": { "type": "string" },
          "description": "域事件映射"
        },
        "businessRules": {
          "type": "array",
          "items": { "type": "string" },
          "description": "业务规则映射"
        }
      },
      "additionalProperties": false
    },
    "SolutionDomainMapping": {
      "type": "object",
      "description": "解决方案域映射",
      "properties": {
        "applicationServices": {
          "type": "array",
          "items": { "type": "string" },
          "description": "应用服务映射"
        },
        "domainServices": {
          "type": "array",
          "items": { "type": "string" },
          "description": "域服务映射"
        },
        "repositories": {
          "type": "array",
          "items": { "type": "string" },
          "description": "仓储映射"
        },
        "factories": {
          "type": "array",
          "items": { "type": "string" },
          "description": "工厂映射"
        }
      },
      "additionalProperties": false
    },
    "CommunicationDomainMapping": {
      "type": "object",
      "description": "通信域映射",
      "properties": {
        "apiEndpoints": {
          "type": "array",
          "items": { "type": "string" },
          "description": "API端点映射"
        },
        "dtoObjects": {
          "type": "array",
          "items": { "type": "string" },
          "description": "DTO对象映射"
        },
        "messageTypes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "消息类型映射"
        },
        "communicationProtocols": {
          "type": "array",
          "items": { "type": "string" },
          "description": "通信协议映射"
        }
      },
      "additionalProperties": false
    },
    "InfrastructureDomainMapping": {
      "type": "object",
      "description": "基础设施域映射",
      "properties": {
        "persistenceEntities": {
          "type": "array",
          "items": { "type": "string" },
          "description": "持久化实体映射"
        },
        "databaseTables": {
          "type": "array",
          "items": { "type": "string" },
          "description": "数据库表映射"
        },
        "integrationPoints": {
          "type": "array",
          "items": { "type": "string" },
          "description": "集成点映射"
        },
        "externalSystems": {
          "type": "array",
          "items": { "type": "string" },
          "description": "外部系统映射"
        }
      },
      "additionalProperties": false
    },
    "TermExample": {
      "type": "object",
      "description": "术语使用示例",
      "properties": {
        "title": {
          "type": "string",
          "description": "示例标题"
        },
        "context": {
          "type": "string",
          "description": "示例上下文"
        },
        "usage": {
          "type": "string",
          "description": "使用方式"
        },
        "explanation": {
          "type": "string",
          "description": "示例解释"
        }
      },
      "required": ["title", "usage"],
      "additionalProperties": false
    },
    "TermQualityIndicators": {
      "type": "object",
      "description": "术语质量指标",
      "properties": {
        "clarity": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "清晰度评分"
        },
        "consistency": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "一致性评分"
        },
        "completeness": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "完整性评分"
        },
        "accuracy": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "准确性评分"
        },
        "usability": {
          "type": "number",
          "minimum": 0,
          "maximum": 10,
          "description": "可用性评分"
        }
      },
      "additionalProperties": false
    },
    "TermLifecycle": {
      "type": "object",
      "description": "术语生命周期",
      "properties": {
        "status": {
          "type": "string",
          "enum": ["proposed", "review", "approved", "active", "deprecated", "retired"],
          "description": "状态"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "创建时间"
        },
        "createdBy": {
          "type": "string",
          "description": "创建者"
        },
        "approvedAt": {
          "type": "string",
          "format": "date-time",
          "description": "批准时间"
        },
        "approvedBy": {
          "type": "string",
          "description": "批准者"
        },
        "lastModifiedAt": {
          "type": "string",
          "format": "date-time",
          "description": "最后修改时间"
        },
        "lastModifiedBy": {
          "type": "string",
          "description": "最后修改者"
        },
        "deprecatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "废弃时间"
        },
        "retiredAt": {
          "type": "string",
          "format": "date-time",
          "description": "退役时间"
        }
      },
      "required": ["status", "createdAt", "createdBy"],
      "additionalProperties": false
    },
    "SemanticDefinitions": {
      "type": "object",
      "description": "语义定义体系",
      "properties": {
        "conceptualModel": {
          "$ref": "#/$defs/ConceptualModel",
          "description": "概念模型"
        },
        "ontologyDefinitions": {
          "type": "array",
          "items": { "$ref": "#/$defs/OntologyDefinition" },
          "description": "本体定义"
        },
        "semanticRules": {
          "type": "array",
          "items": { "$ref": "#/$defs/SemanticRule" },
          "description": "语义规则"
        },
        "contextDefinitions": {
          "type": "array",
          "items": { "$ref": "#/$defs/ContextDefinition" },
          "description": "上下文定义"
        }
      },
      "additionalProperties": false
    },
    "ConceptualModel": {
      "type": "object",
      "description": "概念模型",
      "properties": {
        "modelId": {
          "type": "string",
          "description": "模型标识"
        },
        "concepts": {
          "type": "array",
          "items": { "$ref": "#/$defs/Concept" },
          "description": "概念定义"
        },
        "relationships": {
          "type": "array",
          "items": { "$ref": "#/$defs/ConceptRelationship" },
          "description": "概念关系"
        }
      },
      "required": ["modelId", "concepts"],
      "additionalProperties": false
    },
    "Concept": {
      "type": "object",
      "description": "概念定义",
      "properties": {
        "conceptId": {
          "type": "string",
          "description": "概念标识"
        },
        "name": {
          "type": "string",
          "description": "概念名称"
        },
        "definition": {
          "type": "string",
          "description": "概念定义"
        },
        "properties": {
          "type": "array",
          "items": { "type": "string" },
          "description": "概念属性"
        }
      },
      "required": ["conceptId", "name", "definition"],
      "additionalProperties": false
    },
    "ConceptRelationship": {
      "type": "object",
      "description": "概念关系",
      "properties": {
        "sourceConceptId": {
          "type": "string",
          "description": "源概念标识"
        },
        "targetConceptId": {
          "type": "string",
          "description": "目标概念标识"
        },
        "relationshipType": {
          "type": "string",
          "description": "关系类型"
        }
      },
      "required": ["sourceConceptId", "targetConceptId", "relationshipType"],
      "additionalProperties": false
    },
    "OntologyDefinition": {
      "type": "object",
      "description": "本体定义",
      "properties": {
        "ontologyId": {
          "type": "string",
          "description": "本体标识"
        },
        "namespace": {
          "type": "string",
          "description": "命名空间"
        },
        "classes": {
          "type": "array",
          "items": { "type": "object" },
          "description": "类定义"
        },
        "properties": {
          "type": "array",
          "items": { "type": "object" },
          "description": "属性定义"
        },
        "individuals": {
          "type": "array",
          "items": { "type": "object" },
