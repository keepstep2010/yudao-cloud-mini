{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/2.0/api-definition/fields/response-fields.schema.json",
  "title": "API响应字段",
  "description": "API响应相关的原子字段定义 - 支持多状态码和媒体类型",
  "version": "2.0.0",
  "type": "object",
  "properties": {
    "statusCode": {
      "type": "string",
      "pattern": "^[1-5][0-9]{2}$|^default$",
      "description": "HTTP状态码或default"
    },
    "mediaType": {
      "type": "string",
      "enum": [
        "application/json",
        "application/xml", 
        "text/plain",
        "text/html",
        "application/octet-stream",
        "multipart/form-data",
        "application/x-www-form-urlencoded"
      ],
      "description": "响应媒体类型"
    },
    "schema": {
      "type": "object",
      "description": "响应数据模式定义"
    },
    "examples": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]*$": {
          "type": "object",
          "properties": {
            "summary": {
              "type": "string",
              "maxLength": 100
            },
            "description": {
              "type": "string",
              "maxLength": 500
            },
            "value": {
              "description": "示例值"
            },
            "externalValue": {
              "type": "string",
              "format": "uri"
            }
          }
        }
      },
      "description": "响应示例"
    },
    "headers": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_-]*$": {
          "type": "object",
          "properties": {
            "description": {
              "type": "string",
              "maxLength": 200
            },
            "required": {
              "type": "boolean",
              "default": false
            },
            "deprecated": {
              "type": "boolean",
              "default": false
            },
            "allowEmptyValue": {
              "type": "boolean",
              "default": false
            },
            "schema": {
              "type": "object"
            }
          }
        }
      },
      "description": "响应头定义"
    },
    "links": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z][a-zA-Z0-9_]*$": {
          "type": "object",
          "properties": {
            "operationRef": {
              "type": "string"
            },
            "operationId": {
              "type": "string"
            },
            "parameters": {
              "type": "object"
            },
            "requestBody": {},
            "description": {
              "type": "string",
              "maxLength": 200
            }
          }
        }
      },
      "description": "链接定义"
    }
  },
  "additionalProperties": false
}
