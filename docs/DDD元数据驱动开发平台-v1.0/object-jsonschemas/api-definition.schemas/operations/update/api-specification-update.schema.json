{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/2.0/api-definition/operations/update/api-specification-update.schema.json",
  "title": "API规范更新操作",
  "description": "完整更新API规范的操作模式 - 替换整个规范定义",
  "version": "2.0.0",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "要更新的API规范ID"
    },
    "specification": {
      "$ref": "../../full/api-specification.schema.json",
      "description": "新的API规范完整定义"
    },
    "options": {
      "type": "object",
      "properties": {
        "validateBackwardCompatibility": {
          "type": "boolean",
          "default": true,
          "description": "是否验证向后兼容性"
        },
        "updateVersion": {
          "type": "boolean",
          "default": true,
          "description": "是否自动更新版本号"
        },
        "preserveDeprecated": {
          "type": "boolean",
          "default": true,
          "description": "是否保留已废弃的端点"
        },
        "migrateExisting": {
          "type": "boolean",
          "default": false,
          "description": "是否迁移现有数据"
        }
      },
      "description": "更新选项"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "updatedBy": {
          "type": "string",
          "maxLength": 50,
          "description": "更新者"
        },
        "updateReason": {
          "type": "string",
          "maxLength": 500,
          "description": "更新原因"
        },
        "previousVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "前一版本号"
        },
        "breakingChanges": {
          "type": "array",
          "items": {"type": "string"},
          "description": "破坏性变更列表"
        }
      },
      "description": "更新元数据"
    }
  },
  "required": ["id", "specification"],
  "additionalProperties": false
}
