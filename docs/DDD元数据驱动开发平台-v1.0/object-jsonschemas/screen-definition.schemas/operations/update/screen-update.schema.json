{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/2.0/screen-definition/operations/update/screen-update.schema.json",
  "title": "界面定义更新操作",
  "description": "完整更新界面定义的操作模式 - 支持布局、组件和数据绑定更新",
  "version": "2.0.0",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "要更新的界面ID"
    },
    "screen": {
      "$ref": "../../full/screen.schema.json",
      "description": "新的界面完整定义"
    },
    "options": {
      "type": "object",
      "properties": {
        "validateLayout": {
          "type": "boolean",
          "default": true,
          "description": "是否验证布局结构"
        },
        "preserveUserData": {
          "type": "boolean",
          "default": true,
          "description": "是否保留用户数据"
        },
        "updatePermissions": {
          "type": "boolean",
          "default": false,
          "description": "是否更新权限设置"
        },
        "migrateComponents": {
          "type": "boolean",
          "default": true,
          "description": "是否迁移组件"
        },
        "generatePreview": {
          "type": "boolean",
          "default": false,
          "description": "是否生成预览"
        }
      },
      "description": "更新选项"
    },
    "metadata": {
      "type": "object",
      "properties": {
        "updatedBy": {
          "type": "string",
          "maxLength": 50,
          "description": "更新者"
        },
        "updateReason": {
          "type": "string",
          "maxLength": 500,
          "description": "更新原因"
        },
        "previousVersion": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "前一版本号"
        },
        "uiChanges": {
          "type": "array",
          "items": {"type": "string"},
          "description": "UI变更列表"
        }
      },
      "description": "更新元数据"
    }
  },
  "required": ["id", "screen"],
  "additionalProperties": false
}
