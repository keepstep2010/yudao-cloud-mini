{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/2.0/screen-definition/fields/screen-fields.schema.json",
  "title": "屏幕相关字段",
  "description": "屏幕定义相关的字段定义",
  "version": "2.0.0",
  "type": "object",
  "$defs": {
    "screenId": {
      "type": "string",
      "pattern": "^screen_[a-zA-Z0-9_]+$",
      "description": "屏幕ID"
    },
    "screenType": {
      "type": "string",
      "enum": [
        "LIST_PAGE",
        "DETAIL_PAGE", 
        "EDIT_PAGE",
        "MASTER_DETAIL_PAGE",
        "TREE_TABLE_PAGE",
        "DASHBOARD_PAGE",
        "REPORT_PAGE",
        "WORKFLOW_PAGE",
        "CONFIRM_DIALOG",
        "EDIT_DIALOG",
        "SELECT_DIALOG",
        "DETAIL_DIALOG",
        "CUSTOM_DIALOG",
        "WIZARD_DIALOG",
        "MESSAGE_TOAST",
        "NOTIFICATION_BAR",
        "ALERT_BOX",
        "STATUS_INFO",
        "PROGRESS_NOTIFICATION",
        "TOOLTIP",
        "POPOVER",
        "CONTAINER_LAYOUT",
        "GRID_LAYOUT",
        "FLEX_LAYOUT",
        "TAB_LAYOUT",
        "ACCORDION_LAYOUT",
        "DRAWER_LAYOUT"
      ],
      "description": "屏幕类型 - 包含业务页面、对话框、通知信息和布局容器等完整类型"
    },
    "screenCategory": {
      "type": "string",
      "enum": [
        "BUSINESS",
        "SYSTEM", 
        "NOTIFICATION",
        "LAYOUT",
        "INTERACTION",
        "ANALYSIS",
        "WORKFLOW",
        "CUSTOM"
      ],
      "description": "屏幕分类 - 业务类、系统类、通知类、布局类、交互类、分析类、流程类、自定义类"
    },
    "path": {
      "type": "string",
      "description": "路由路径"
    },
    "icon": {
      "type": "string",
      "description": "图标"
    },
    "badge": {
      "type": "string",
      "description": "徽章文本"
    },
    "redirectTo": {
      "type": "string",
      "description": "重定向到的路径"
    },
    "parentScreenId": {
      "type": "string",
      "pattern": "^screen_[a-zA-Z0-9_]+$",
      "description": "父屏幕ID"
    },
    "layoutId": {
      "type": "string",
      "pattern": "^layout_[a-zA-Z0-9_]+$",
      "description": "使用的布局ID"
    },
    "themeId": {
      "type": "string",
      "pattern": "^theme_[a-zA-Z0-9_]+$",
      "description": "使用的主题ID"
    },
    "cacheable": {
      "type": "boolean",
      "description": "是否可缓存"
    },
    "keepAlive": {
      "type": "boolean",
      "description": "是否保持活跃状态"
    },
    "breadcrumb": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "面包屑导航"
    }
  }
}
