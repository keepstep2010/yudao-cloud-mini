{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/ddd-metamodel/2.0/implementation-mapping/fields/common-fields.schema.json",
  "title": "实现映射通用字段",
  "description": "所有实现映射模式共享的通用字段定义",
  "version": "2.0.0",
  "type": "object",
  "$defs": {
    "id": {
      "type": "string",
      "description": "唯一标识符"
    },
    "name": {
      "type": "string",
      "description": "名称",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "详细描述"
    },
    "isActive": {
      "type": "boolean",
      "description": "是否激活"
    },
    "version": {
      "type": "string",
      "description": "版本号"
    },
    "domainId": {
      "type": "string",
      "pattern": "^domain_[a-zA-Z0-9_]+$",
      "description": "所属领域ID"
    },
    "boundedContextId": {
      "type": "string",
      "pattern": "^bc_[a-zA-Z0-9_]+$",
      "description": "所属限界上下文ID"
    },
    "aggregateId": {
      "type": "string",
      "pattern": "^agg_[a-zA-Z0-9_]+$",
      "description": "所属聚合ID"
    },
    "entityId": {
      "type": "string",
      "pattern": "^entity_[a-zA-Z0-9_]+$",
      "description": "所属实体ID"
    },
    "dtoId": {
      "type": "string",
      "pattern": "^dto_[a-zA-Z0-9_]+$",
      "description": "关联的DTO ID"
    }
  }
}
