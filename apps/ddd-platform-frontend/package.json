    "antd": "^5.12.0",
    "axios": "^1.6.0",
    "classnames": "^2.3.0",
    "dayjs": "^1.11.0",
    "lodash-es": "^4.17.0",
    "mobx": "^6.13.7",
    "mobx-react": "^9.2.0",
    "mobx-react-lite": "^4.1.0",
    "monaco-editor": "^0.44.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.0",
