# DDD驱动开发平台前端 - 环境配置示例

# 应用配置
VITE_APP_TITLE=DDD驱动开发平台
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# API配置
VITE_API_BASE_URL=http://127.0.0.1:8100
VITE_API_TIMEOUT=10000

# 认证配置
VITE_AUTH_ENABLED=true
VITE_AUTH_TOKEN_KEY=ddd_platform_token

# 功能开关
VITE_FEATURE_DDD_MODELING=true
VITE_FEATURE_SCREEN_DESIGN=true
VITE_FEATURE_CODE_GENERATION=true
VITE_FEATURE_REAL_TIME_PREVIEW=true

# 开发工具
VITE_DEVTOOLS_ENABLED=true
VITE_MOCK_ENABLED=false

# 监控配置
VITE_MONITORING_ENABLED=true
VITE_ERROR_REPORTING_ENABLED=true

# 国际化
VITE_I18N_DEFAULT_LOCALE=zh-CN
VITE_I18N_FALLBACK_LOCALE=en-US

# 主题配置
VITE_THEME_DEFAULT=light
VITE_THEME_PRIMARY_COLOR=#1890ff

# 分页配置
VITE_PAGINATION_DEFAULT_PAGE_SIZE=10
VITE_PAGINATION_PAGE_SIZE_OPTIONS=10,20,50,100

# 上传配置
VITE_UPLOAD_MAX_SIZE=10485760
VITE_UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf

# 缓存配置
VITE_CACHE_ENABLED=true
VITE_CACHE_TTL=300000

# 日志配置
VITE_LOG_LEVEL=info
VITE_LOG_ENABLED=true




